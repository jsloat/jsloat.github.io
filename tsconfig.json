{
  "compilerOptions": {
    "target": "ES2020",
    "sourceMap": true,
    "checkJs": false,
    "declaration": true,
    "module": "ES2015",
    "isolatedModules": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "lib": ["ES2020", "dom", "DOM.Iterable"],
    "jsx": "react",
    "baseUrl": "./",
    "noEmit": true
  },
  "include": ["src/**/*", "src/custom.d.ts"],
  "exclude": ["node_modules"]
}
